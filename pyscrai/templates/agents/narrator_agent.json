        "knowledge_base": {
            "name": "knowledge_base",
            "enabled": true,
            "config": {
                "max_search_results": 5
            }
        }
    },
    "runtime_overrides": {
        "narrative_style": "override_allowed",
        "perspective": "override_allowed"
    },
    "engine_specific_config": {
        "narrator": {
            "sensory_details": true,
            "atmospheric_focus": true,
            "smooth_bridging": true,
            "default_perspective": "third_person",
