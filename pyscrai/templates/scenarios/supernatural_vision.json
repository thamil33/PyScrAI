{
  "name": "Supernatural Vision Investigation",
  "description": "Scenario where Pope Leo XIII experiences and investigates a supernatural vision",
  "config": {
    "max_turns": 10,
    "timeout_seconds": 1800,
    "completion_conditions": {
      "decision_reached": true,
      "theological_analysis_complete": true
    },
    "error_handling": {
      "retry_attempts": 3,
      "fallback_responses": true
    }
  },
  "agent_roles": {
    "pope": {
      "template_name": "Pope Leo XIII",
      "role_config": {
        "role": "experiencer",
        "description": "The main character experiencing the vision"
      },
      "required": true
    },
    "narrator": {
      "template_name": "Narrator",
      "role_config": {
        "role": "storyteller", 
        "description": "Describes the environment and vision details"
      },
      "required": true
    }
  },
  "event_flow": {
    "initial_experience": {
      "type": "trigger",
      "source": "narrator",
      "target": "pope",
      "data_schema": {
        "prompt": "string",
        "setting": "object",
        "atmosphere": "string"
      },
      "conditions": {
        "trigger": "scenario_start",
        "duration_minutes": 5
      }
    },
    "vision_deepens": {
      "type": "interaction",
      "source": "pope",
      "target": "narrator",
      "data_schema": {
        "vision_details": "object",
        "emotional_response": "string"
      },
      "conditions": {
        "trigger": "initial_experience_complete",
        "duration_minutes": 10
      }
    },
    "theological_reflection": {
      "type": "response",
      "source": "pope",
      "target": null,
      "data_schema": {
        "theological_analysis": "string",
        "doctrinal_references": "array"
      },
      "conditions": {
        "trigger": "vision_complete",
        "requires_reasoning": true
      }
    },
    "decision_making": {
      "type": "state_change",
      "source": "pope",
      "target": "scenario",
      "data_schema": {
        "decision": "string",
        "justification": "string",
        "next_actions": "array"
      },
      "conditions": {
        "trigger": "reflection_complete",
        "final_phase": true
      }
    }
  }
}
